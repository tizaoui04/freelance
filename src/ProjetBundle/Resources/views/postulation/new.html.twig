{% extends 'base.html.twig' %}

{% block body %}

    <div class="single-page-header" data-background-image="{{ asset('images/67125bf1d2a954b04414afd87684a687.jpg') }}">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="single-page-header-inner">
                        <div class="left-side">
                            <div class="header-image"><img src="{{ asset('images/company-logo-01.png') }}" ></div>
                            <div class="header-details">
                                <h3>{{ projet.titre }}</h3>
                                <h5>{{ projet.client.nom }} {{ projet.client.prenom }}</h5>
                                <ul>

                                    <li><div class="star-rating" data-rating="4.9"></div></li>
                                    <li><img class="flag" src="images/flags/gb.svg" alt=""> {{ projet.client.adress }}</li>
                                    <li><div class="verified-badge-with-title">Verified</div></li>
                                </ul>
                            </div>
                        </div>
                        <div class="right-side">
                            <div class="salary-box">
                                <div class="salary-type">Budget</div>
                                <div class="salary-amount">{{ projet.budget }}DT</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">

            <!-- Content -->
            <div class="col-xl-8 col-lg-8 content-right-offset">

                <div class="single-page-section">
                    <h3 class="margin-bottom-25">Travaille Description</h3>
                    <p>{{ postulation.project.description }}</p>

                </div>
                <div class="single-page-section">



                </div>
            </div>








            <div class="col-xl-4 col-lg-4">
                <div class="sidebar-container">


                    <div class="countdown green margin-bottom-35">{% if projet.dateprojet %}{{ projet.dateprojet|date('Y-m-d') }}{% endif %}</div>
                    <!-- Sidebar Widget -->
                    <div class="sidebar-widget">
                        <div class="job-overview">
                            {% if is_granted('ROLE_FREELANCER') %}
                            {{ form_start(form) }}
                            <div class="job-overview-headline">Postuler sur ce travail!</div>
                            <div class="job-overview-inner">

                                <span class="bidding-detail"><strong>Lettre </strong>de motivation</span>

                                <!-- Price Slider -->
                                {{ form_widget(form.lettre) }}
                                <input type="submit" value="Postuler" />

                            </div>
                            {{ form_end(form) }}
                            {% endif %}
                        </div>
                    </div>



                </div>
            </div>

        </div>


    </div>


{% endblock %}
