{% extends 'base.html.twig' %}

{% block body %}

    <!-- Intro Banner
    ================================================== -->
    <!-- add class "disable-gradient" to enable consistent background overlay -->
    <div class="intro-banner" data-background-image="{{ asset('images/home-background.jpg') }}">
        <div class="container">

            <!-- Intro Headline -->
            <div class="row">
                <div class="col-md-12">
                    <div class="banner-headline">
                        <h3>
                            <strong>Embaucher des experts ou embaucher n'importe quel emploi à tout moment.</strong>
                            <br>
                            <span>Des milliers de petites entreprises utilisent <strong class="color">Titan</strong> pour transformer leurs idées en réalité.</span>
                        </h3>
                    </div>
                </div>
            </div>

            <!-- Search Bar -->
            <div class="row">
                <div class="col-md-12"> <form action="{{ path("search_project") }}" method="post">
                    <div class="intro-banner-search-form margin-top-95">




                        <!-- Search Field -->
                        <div class="intro-search-field">
                            <label for ="intro-keywords" class="field-title ripple-effect">Quel travail tu veux?</label>
                            <input id="intro-keywords" type="text" placeholder="Titre du poste ou mots clés   " name="filter">
                        </div>

                        <!-- Button -->
                        <div class="intro-search-button">
                            <button class="button ripple-effect" type="submit">Recherche</button>
                        </div>

                    </div></form>
                </div>
            </div>

            <!-- Stats -->
            <div class="row">
                <div class="col-md-12">
                    <ul class="intro-stats margin-top-45 hide-under-992px">
                        <li>
                            <strong class="counter">{{pcount|first}}</strong>
                            <span>Projets</span>
                        </li>
                        <li>
                            <strong class="counter">{{postcount|first}}</strong>
                            <span>Postes affichés</span>
                        </li>
                        <li>
                            <strong class="counter">{{fcount|first}}</strong>
                            <span>Freelancers</span>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </div>


    <!-- Content
    ================================================== -->
    <!-- Category Boxes -->
    <div class="section margin-top-65">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">

                    <div class="section-headline centered margin-bottom-15">
                        <h3>Catégories d'emploi populaires</h3>
                    </div>

                    <!-- Category Boxes Container -->
                    <div class="categories-container">

                        <!-- Category Box -->
                        <a href="#" class="category-box">
                            <div class="category-box-icon">
                                <i class="icon-line-awesome-file-code-o"></i>
                            </div>
                            <div class="category-box-content">
                                <h3>Programmation & Tech</h3>
                                <p>Ingénieur logiciel, développeur Web / Mobile & plus</p>
                            </div>
                        </a>





                        <!-- Category Box -->
                        <a href="#" class="category-box">
                            <div class="category-box-icon">
                                <i class="icon-line-awesome-pie-chart"></i>
                            </div>
                            <div class="category-box-content">
                                <h3>Cartoon</h3>
                                <p>Designer, cartoon carecature</p>

                            </div>
                        </a>

                        <!-- Category Box -->
                        <a href="#" class="category-box">
                            <div class="category-box-icon">
                                <i class="icon-line-awesome-image"></i>
                            </div>
                            <div class="category-box-content">
                                <h3>Graphique & Designe</h3>
                                <p>Designer, web designe</p>

                            </div>
                        </a>

                        <!-- Category Box -->
                        <a href="#" class="category-box">
                            <div class="category-box-icon">
                                <i class="icon-line-awesome-bullhorn"></i>
                            </div>
                            <div class="category-box-content">
                                <h3>Marketing digital</h3>
                                <p>Adapter l’offre, proposer un produit ou service personnalisé</p>

                            </div>
                        </a>



                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Category Boxes / End -->


    <!-- Features Jobs -->
    <div class="section gray margin-top-45 padding-top-65 padding-bottom-75">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">

                    <!-- Section Headline -->
                    <div class="section-headline margin-top-0 margin-bottom-35">
                        <h3>Future Emploi</h3>
                        <a href="jobs-list-layout-full-page-map.html" class="headline-link">Parcourir tous les emplois</a>
                    </div>

                    <!-- Jobs Container -->
                    <div class="listings-container compact-list-layout margin-top-35">

                        {% for job in jobs %}
                        <!-- Job Listing -->
                        <a href="{{ path('postulation_new',{'id':job.id}) }}" class="job-listing with-apply-button">

                            <!-- Job Listing Details -->
                            <div class="job-listing-details">

                                <!-- Logo -->
                                <div class="job-listing-company-logo">
                                    <img src="{{ asset('images/company-logo-01.png') }}" alt="">
                                </div>

                                <!-- Details -->
                                <div class="job-listing-description">
                                    <h3 class="job-listing-title">{{ job.titre }}</h3>

                                    <!-- Job Listing Footer -->
                                    <div class="job-listing-footer">
                                        <ul>
                                            <li><i class="icon-line-awesome-user"></i>{{job.client.nom ~" "~ job.client.prenom}} <div class="verified-badge" title="Verified Employer" data-tippy-placement="top"></div></li>
                                            <li><i class="icon-line-awesome-money"></i> {{job.budget}}</li>
                                            <li><i class="icon-material-outline-business-center"></i> {{ job.categorie.libelle }}</li>
                                            <li><i class="icon-material-outline-access-time"></i>{{job.dateprojet | date("d/m/y")}}</li>
                                        </ul>
                                    </div>
                                </div>

                                <!-- Apply Button -->
                                 <span class="list-apply-button ripple-effect">Appliquer</span>
                            </div>
                        </a>

                        {% endfor %}



                    </div>
                    <!-- Jobs Container / End -->

                </div>
            </div>
        </div>
    </div>
    <!-- Featured Jobs / End -->





    <!-- Highest Rated Freelancers -->
    <div class="section gray padding-top-65 padding-bottom-70 full-width-carousel-fix">
        <div class="container">
            <div class="row">

                <div class="col-xl-12">
                    <!-- Section Headline -->
                    <div class="section-headline margin-top-0 margin-bottom-25">
                        <h3>Freelancers les mieux notés</h3>
                        <a href="freelancers-grid-layout.html" class="headline-link">Parcourir tous les freelancers</a>
                    </div>
                </div>

                <div class="col-xl-12">
                    <div class="default-slick-carousel freelancers-container freelancers-grid-layout">

                        {% for freelancer in freelancers %}
                        <!--Freelancer -->
                        <div class="freelancer">

                            <!-- Overview -->
                            <div class="freelancer-overview">
                                <div class="freelancer-overview-inner">

                                    <!-- Bookmark Icon -->
                                    <span class="bookmark-icon"></span>

                                    <!-- Avatar -->
                                    <div class="freelancer-avatar">

                                        <a href="{{path('freelancer_show',{"id":freelancer.id})}}"><img src="{{ freelancer.image ? asset(vich_uploader_asset(freelancer,'imageFile'))  : asset('images/user-avatar-small-01.jpg') }} "  alt=""></a>
                                    </div>

                                    <!-- Name -->
                                    <div class="freelancer-name">
                                        <h4><a href="{{path('freelancer_show',{"id":freelancer.id})}}">{{freelancer.nom ~" "~ freelancer.prenom}} <img class="flag" src="{{ asset('images/flags/tn.svg') }}" alt="" title="Tunisie" data-tippy-placement="top"></a></h4>
                                        <span>{{freelancer.domaine}}</span>
                                    </div>

                                    <!-- Rating -->
                                    <div class="freelancer-rating">
                                        {% set sumratings = 0 %}
                                        {% set total = freelancer.notes|length %}
                                        {% for rating in  freelancer.notes %}
                                            {% set sumratings = sumratings + rating.note %}
                                        {% endfor %}
                                        {% if total==0 %}
                                            {% set total=1 %}
                                        {% endif %}

                                        <div class="star-rating" data-rating="{{  sumratings / total }}"></div>

                                    </div>
                                </div>
                            </div>

                            <!-- Details -->
                            <div class="freelancer-details">
                                <div class="freelancer-details-list">
                                    <ul>
                                        <li>Numéro <strong><i class="icon-material-outline-location-on"></i> {{freelancer.numtel}}</strong></li>
                                        <li>Date de naissane <strong>{{freelancer.date|date("d/m/y")}}</strong></li>

                                    </ul>
                                </div>
                                <a href="{{ path('freelancer_show', {'id':freelancer.id}) }}" class="button button-sliding-icon ripple-effect">View Profile <i class="icon-material-outline-arrow-right-alt"></i></a>
                            </div>
                        </div>
                        <!-- Freelancer / End -->

                        {% endfor %}


                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Highest Rated Freelancers / End-->



{% endblock %}


